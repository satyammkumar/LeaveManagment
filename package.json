{
  "name": "LM-Application",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "private": true,
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@cap-js/hana": "^2",
    "@sap/cds": "^9",
    "@sap/xssec": "^4",
    "bcryptjs": "^3.0.3",
    "express": "^4"
  },
  
  "scripts": {
    "start": "cds-serve",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy:hana": "cds deploy --to hana",
    "deploy:hdi": "cd db && npm start -- --exit",
    "watch-lms-ui5": "cds watch --open lmsui5/index.html?sap-ui-xx-viewCache=false --livereload false",
    "undeploy": "cf undeploy LM-Application --delete-services --delete-service-keys --delete-service-brokers",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana"
      },
      "[production]": {
        "db": {
          "kind": "hana"
        },
        "auth": "mocked"
      }
    }
  },
  "workspaces": [
    "app/*"
  ]
}
