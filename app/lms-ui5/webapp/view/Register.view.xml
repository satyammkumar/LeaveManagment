
<mvc:View
  controllerName="lmsui5.controller.Register"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core">

  <App id="app2">
    <Page id="registerPage" showHeader="false" backgroundDesign="Solid">
      <content>
        <VBox width="100%" height="100%" alignItems="Center" justifyContent="Center" class="login__viewport">
          <VBox class="login__card login__form" width="auto">
            <Title text="Create Account" class="login__title"/>
            <Text text="Fill in your details to register " class="login__subtitle"/>

            <!-- Error Message Strip -->
            <MessageStrip
              id="registerMsg"
              type="Error"
              showIcon="true"
              visible="false"
              class="sapUiTinyMarginTop"/>

            <!-- Form Fields -->
            <Input id="firstName" placeholder="First Name" value="{register>/firstName}" valueLiveUpdate="true"/>
            <Input id="lastName" placeholder="Last Name" value="{register>/lastName}" valueLiveUpdate="true"/>
            <Input id="email" placeholder="Email Address" type="Email" value="{register>/email}" valueLiveUpdate="true"/>
            <Input id="pass" placeholder="Password (min 6 characters)" type="Password" value="{register>/password}" valueLiveUpdate="true"/>
            <Input id="confirmPassword" placeholder="Confirm Password" type="Password" value="{register>/confirmPassword}" valueLiveUpdate="true"/>

            <!-- Actions -->
            <HBox class="login__actions sapUiSmallMarginTop" justifyContent="SpaceBetween" width="100%">
              <Button id="btnBackToLogin" text="Back to Login" type="Transparent" press=".onBackToLogin"/>
              <Button id="Register" text="Register" type="Emphasized" press=".onRegister"/>
            </HBox>
          </VBox>
        </VBox>
      </content>
    </Page>
  </App>
</mvc:View>
